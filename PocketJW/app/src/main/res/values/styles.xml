<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="android:actionBarStyle">@style/IIIActionBarStyle</item>
    </style>

    <style name="IIIActionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:titleTextStyle">@style/IIIActionBarStyle.TitleTextStyle</item>
        <item name="android:backgroundSplit">@color/primaryColorDark</item>
    </style>
    
    <style name="IIIActionBarStyle.TitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
